<Window x:Class="preshow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:preshow"
        mc:Ignorable="d"
        Title="Jeremy's Presentation Preshow" Height="450" Width="800"
        KeyDown="Window_KeyDown"
        Background="Black" WindowStartupLocation="CenterOwner" 
        WindowState="Maximized" WindowStyle="None" Cursor="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Image Name="targetImage" Stretch="Uniform" 
               Grid.ColumnSpan="3"/>
        <TextBlock Name="urlDisplay" Grid.Row="1" Grid.Column="0"
                   Foreground="White" FontSize="30"
                   Margin="10, 5"/>
        <TextBlock Name="countDown" Grid.Row="1" Grid.Column="2"
                   Foreground="White" FontSize="42"
                   Margin="10, 5"/>
    </Grid>
</Window>
